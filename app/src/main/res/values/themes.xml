<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Islamic" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_quran</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSurface">@color/background_main_neumorphic</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary</item>

        <item name="android:colorBackground">?attr/colorSurface</item>

        <item name="android:textColorPrimary">?attr/colorOnSurface</item>
        <item name="android:textColorSecondary">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="Theme.Islamic" parent="Base.Theme.Islamic" />

    <style name="Theme.App.Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>

        <item name="android:statusBarColor">@color/colorPrimary</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>